<% include ../partials/header %>

<div class='container'>
    <div class='col-md-6'>
        <div class='post-page'>
            <h1><%= post.title %></h1>
            <img src='<%= post.image %>' class='show-post'><br>
            <span><%= post.created.toDateString() %></span>
            <p><%= post.body %></p>
            <a href='/posts' class='show-back__btn'>Back to Main</a>
            <a href='/posts/<%= post._id %>/edit' class='show-edit__btn'>Edit post</a>
            <form action='/posts/<%= post._id%>?_method=DELETE'  method='POST' >
                <button class='show-delete__btn'>Delete post</button>
            </form>
        </div>
        <br>
        <hr>
        <h2>Comments:</h2>
        <% post.comments.forEach(function(comment){ %>
            <p><%= comment.author %>:</p>
            <p><%= comment.text %></p>
        <% }); %>
        <button class="btn btn-success"><a  href="/posts/<%= post._id %>/comments/new">Add New Comment</a></button
    </div>
</div>   
<% include ../partials/footer %>